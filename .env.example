# Application Configuration
APP_NAME="Anomaly & Fraud Detection Platform"
APP_VERSION="1.0.0"
DEBUG=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/anomaly_detection
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=anomaly_detection

# Feature Store
FEATURE_STORE_PATH=./feature_store

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_URL=http://localhost:3000

# Alerting
SLACK_WEBHOOK_URL=
EMAIL_SMTP_SERVER=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=

# Data Sources
KAFKA_BOOTSTRAP_SERVERS=["localhost:9092"]
MQTT_BROKER=localhost
MQTT_PORT=1883

# PII Handling
PII_FIELDS=["pan", "email", "phone", "ssn", "credit_card"]
PII_MASKING_STRATEGY=hash

# Model Settings
MODEL_RETRAIN_FREQUENCY_HOURS=24
DRIFT_THRESHOLD=0.1
ALERT_THRESHOLD=0.8

# Data Retention
DATA_RETENTION_DAYS=395
AUDIT_LOG_RETENTION_DAYS=2555
